<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/green"
    android:padding="16dp">

    <TextView
        android:textStyle="normal"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Trivia"
        android:text="Trivia"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="80dp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Username: "
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="50dp"
        android:textColorHint="@color/white"
        android:padding="10dp"
        android:background="#B0CCCCCC"/>

    <EditText
        android:id="@+id/edit_text2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/edit_text"
        android:hint="Email: "
        android:textSize="24sp"
        android:padding="10dp"
        android:textColorHint="@color/white"
        android:background="#B0CCCCCC"/>

    <EditText
        android:id="@+id/edit_text3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/edit_text2"
        android:hint="Password: "
        android:textSize="24sp"
        android:padding="10dp"
        android:textColorHint="@color/white"
        android:background="#B0CCCCCC"/>

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="NEXT"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/edit_text3"
        app:layout_constraintStart_toStartOf="@id/edit_text3"
        app:layout_constraintTop_toBottomOf="@id/edit_text3"/>

    <ImageView
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@id/Trivia"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="@id/Trivia"
        app:layout_constraintEnd_toEndOf="@id/Trivia"
        android:src="@drawable/ic_owl"/>
</androidx.constraintlayout.widget.ConstraintLayout>